{
  "env": {
    "node": true,
    "browser": true,
    "es6": false,
    "jest/globals": true
  },
  "ignorePatterns": "./src/**, ./node_modules/**",
  "plugins": ["jest"],
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:import/typescript", "prettier"],
  "rules": {
    "react/jsx-filename-extension": 0,
    "arrow-body-style": 0,
    "react/prefer-stateless-function": 0,
    "no-trailing-spaces": 0,
    "comma-dangle": 0,
    "radix": 0,
    "no-undef": "off",
    "max-len": [
      2,
      {
        "code": 120,
        "ignorePattern": "^import"
      }
    ],
    "react/no-render-return-value": 0,
    "jsx-a11y/label-has-for": 0,
    "no-nested-ternary": 0,
    "class-methods-use-this": 0,
    "jsx-a11y/no-autofocus": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/interactive-supports-focus": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "import/no-named-as-default": 0,
    "camelcase": ["error", { "allow": ["activation_token"] }],
    "react/jsx-props-no-spreading": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": 0,
    // Ignore line endings rule. Suppresses warnings about inconsistent line endings.
    "linebreak-style": 0,
    // Ignore unescaped template literals. Suppresses warnings about unescaped template literals.
    "react/no-unescaped-entities": 0,
    "object-curly-newline": 0,
    "no-empty-pattern": "error",
    "no-unused-vars": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "react/jsx-one-expression-per-line": 0,
    "implicit-arrow-linebreak": 1,
    "no-unused-expressions": 0,
    "no-console": ["error", { "allow": ["warn"] }]
  }
}
